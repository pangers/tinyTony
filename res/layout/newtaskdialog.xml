<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/newtask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="@string/newtask"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine" />

        <RadioGroup
            android:id="@+id/newTaskDailogRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/newTaskDialogRadio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/importance1" />

            <RadioButton
                android:id="@+id/newTaskDialogRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/importance2" />

            <RadioButton
                android:id="@+id/newTaskDialogRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/importance3" />
        </RadioGroup>
    </LinearLayout>

    <EditText
        android:id="@+id/timeremaining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:hint="@string/timeremaining"
        android:inputType="number" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false" />

</LinearLayout>